<%= render 'shared/content_title', title: 'New Category' %>
<%= render 'shared/error_messages', object: @category %>

<div class='well'>
  <%= form_for @category do |f| %>
    <div class="controll-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <%= f.submit "Create Category", class: "btn btn-primary" %>
  <% end %>
</div>